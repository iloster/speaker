<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	 android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    	<FrameLayout 
    		android:id="@android:id/tabcontent"
    		android:layout_width="fill_parent"
    		android:layout_height="0.0dip"
    		android:layout_weight="1.0"/>
    	<TabWidget 
    		android:id="@android:id/tabs"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.0"
    		android:visibility="gone"/>
    	<RadioGroup
    		android:id="@+id/main_tab"
    		android:background="@drawable/tab_main_bg"
    		android:orientation="horizontal"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_vertical"
    		android:layout_gravity="bottom">
    		<RadioButton 
    			android:layout_marginTop="0.0dip"
    			android:text="@string/main_call"
    			android:drawableTop="@drawable/call_normal"
    			android:id="@+id/call"
    			style="@style/main_tab_bottom"/>
    		<RadioButton 
    			android:layout_marginTop="0.0dip"
    			android:text="@string/main_sms"
    			android:drawableTop="@drawable/sms_normal"
    			android:id="@+id/sms"
    			style="@style/main_tab_bottom"/>
    		<RadioButton 
    			android:layout_marginTop="0.0dip"
    			android:text="@string/main_contact" 
    			android:drawableTop="@drawable/contact_normal"
    			android:id="@+id/contact"
    			style="@style/main_tab_bottom"/>
    		<RadioButton 
    			android:layout_marginTop="0.0dip"
    			android:text="@string/main_setting" 
    			android:drawableTop="@drawable/setting_normal"
    			android:id="@+id/setting"
    			style="@style/main_tab_bottom"/>
    		
    	</RadioGroup>
    </LinearLayout>
</TabHost>
